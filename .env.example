# Application Settings
NODE_ENV=production
PORT=5000  # Primary port required by Replit
FALLBACK_PORT=3000  # Used if port 5000 is unavailable (local development)
APP_URL=http://localhost:5000  # Update with your actual domain

# Session Secret (generate a strong random string for production)
SESSION_SECRET=change_this_to_a_long_random_string

# Database Connection
DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/ignitelabs?schema=public
PGHOST=postgres
PGUSER=postgres
PGPASSWORD=postgres_password
PGDATABASE=ignitelabs
PGPORT=5432

# Prisma Settings
# Uncomment for development environment only
# PRISMA_LOG_QUERIES=true
# DEBUG=prisma:client,prisma:engine

# Mailgun Configuration
# MAILGUN_API_KEY=your_api_key
# MAILGUN_DOMAIN=your_domain
# MAILGUN_FROM=your_from_email

# Tenant Settings (for multi-tenancy setup)
DEFAULT_TENANT_ID=1

# File Upload Paths
UPLOAD_DIR=./uploads